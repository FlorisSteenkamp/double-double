{
    "name": "double-double",
    "description": "Pure double-double precision functions *with strict error bounds*.",
    "version": "1.0.4",
    "type": "module",
    "author": {
        "name": "Floris Steenkamp"
    },
    "private": false,
    "license": "MIT",
    "exports": "./node/index.js",
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FlorisSteenkamp/double-double.git"
    },
    "keywords": [
        "floating point",
        "infinite precision",
        "adaptive"
    ],
    "bugs": {
        "url": "https://github.com/FlorisSteenkamp/double-double/issues"
    },
    "dependencies": {},
    "devDependencies": {
        "@assemblyscript/loader": "^0.19.17",
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.6",
        "assemblyscript": "^0.19.18",
        "chai": "^4.3.4",
        "circular-dependency-plugin": "^5.2.2",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.20",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typedoc": "^0.22.7",
        "typedoc-plugin-markdown": "^3.11.3",
        "typescript": "^4.4.4",
        "wabt": "^1.0.24",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1"
    },
    "scripts": {
        "build": "npm run build-browser && npm run build-node",
        "build-node": "rimraf node && tsc",
        "build-browser": "rimraf browser && webpack",
        "build-wasm": "asc assembly/index.ts -d index.d.ts --use abort= --runtime full -O3s -b index.wasm -t index.wat",
        "test": "mocha --require ts-node/register --require source-map-support/register \"test/**/*.spec.ts\" --recursive",
        "coverage": "nyc npm test",
        "test-e2e": "node end-to-end-test-node.js",
        "docs": "npx typedoc --options typedoc-ds.json"
    }
}
